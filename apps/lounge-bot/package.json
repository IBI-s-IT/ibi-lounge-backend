{
  "name": "lounge-bot",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NO_CACHE=1 NODE_PATH=. tsx --watch --require dotenv/config ./src/main.ts | pino-pretty",
    "start": "cross-env NODE_PATH=dist tsx dist/main.js | pino-pretty",
    "build": "tsup-node",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm *.tsbuildinfo",
    "test": "jest --setupFiles dotenv/config",
    "lint": "eslint . --quiet",
    "lint-fix": "eslint . --fix"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/menu": "^1.2.1",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-redis": "^2.4.0",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@repo/api-schema": "*",
    "@repo/generators": "*",
    "@repo/shared": "*",
    "grammy": "^1.19.1",
    "grammy-inline-menu": "^8.0.1",
    "ioredis": "^5.3.2",
    "pino": "^9.4.0"
  },
  "devDependencies": {
    "@types/ioredis": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "tsup": "8.3.0"
  }
}
